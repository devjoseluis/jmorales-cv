    "lint-staged": "^10.2.11",
    "nunjucks": "^3.2.2",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-nunjucks": "^2.2.1",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-idiomatic-sass": "github:devjoseluis/stylelint-config-idiomatic-sass#v2.0.0",
